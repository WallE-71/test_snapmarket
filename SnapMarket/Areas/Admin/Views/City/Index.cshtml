@model SnapMarket.ViewModels.City.CityProvinceViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "../Shared/_AdminLayout.cshtml";
}

<div id="modal-placeholder"></div>
<nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
    <div class="container-fluid">
        <ul class="nav nav-sitemap justify-content-center justify-content-xl-end">
            <li>
                <a class="h4 mb-0 text-white d-lg-inline-block" href="/Admin/Dashboard/Index"> داشبورد </a>
            </li>
            <li class="pr-2 pl-2">
                <i class="fa fa-angle-left text-white align-middle"></i>
            </li>
            <li>
                <a class="h4 mb-0 text-white d-lg-inline-block" href="/Admin/City/Index">مدیریت شهرها</a>
            </li>
        </ul>
        @await Html.PartialAsync("_AdminLogin")
    </div>
</nav>

<div class="header bg-gradient-primary pb-4 pt-5 pt-md-8"></div>

<div class="container-fluid mt--7">
    <div class="row mt-5">
        <div class="card shadow w-100">
            @if (Model.CityId == 0)
            {
                <div class="card-header font_Vazir_Medium">
                    مدیریت شهرها
                </div>
            }
            else
            {
                <div class="card-header font_Vazir_Medium">
                    شهرهای استان
                </div>
            }
            <div class="card-body">
                <form asp-area="Admin" asp-controller="City">
                    @await Html.PartialAsync("_CityTable", Model)
                </form>
            </div>
        </div>
    </div>
</div>
