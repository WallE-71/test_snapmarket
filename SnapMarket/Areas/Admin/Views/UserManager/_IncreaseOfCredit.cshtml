@model SnapMarket.ViewModels.CreditCartViewModel
@using SnapMarket.Entities.Identity;
@{
    ViewData["Title"] = "EditInfo";
    Layout = "../Shared/_AdminLayout.cshtml";
}

<nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
    <div class="container-fluid">
        <ul class="nav nav-sitemap justify-content-center justify-content-xl-end">
            <li>
                <a class="h4 mb-0 text-white d-lg-inline-block" href="/Admin/Dashboard"> داشبورد </a>
            </li>
            <li class="pr-2 pl-2">
                <i class="fa fa-angle-left text-white align-middle"></i>
            </li>
            <li>
                <a class="h4 mb-0 text-white d-lg-inline-block" href="/Admin/UserManager/Index">ویرایش اطلاعات کاربر</a>
                @*<a class="h4 mb-0 text-white d-lg-inline-block" href="/Admin/UserManager/Details?userId=@Model.Id">ویرایش اطلاعات کاربر</a>*@
            </li>
        </ul>
        @await Html.PartialAsync("_AdminLogin")
    </div>
</nav>
<div class="header bg-gradient-primary pb-4 pt-5 pt-md-8"></div>

<div class="container-fluid mt--7">
    <div class="row mt-5">
        <div class="card shadow w-100">
            <div class="card-header font_Vazir_Medium">
                افزایش اعتبار حساب
            </div>
            <div class="card-body">
                <form asp-action="IncreaseOfCredit" method="post">
                    <div class="card-body">
                        @if (ViewBag.AlertSuccess != null)
                        {
                            <div class="col-md-12">
                                <div class="alert alert-danger mb-4 alert-dismissable">
                                    @ViewBag.AlertSuccess
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
                        }
                        <input type="hidden" asp-for="UserId" />
                        <div class="row">
                            <div class="col-md-12 border-left">
                                <div class="col-md-8">
                                    <div class="form-group row">
                                        <div class="col-md-2">
                                            <label asp-for="Credit" class="control-label"></label>
                                        </div>
                                        <div class="col-md-4">
                                            <input asp-for="Credit" class="form-control" />
                                            <span asp-validation-for="Credit" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-2">
                                            <label asp-for="NationalId" class="control-label"></label>
                                        </div>
                                        <div class="col-md-6">
                                            <input asp-for="NationalId" class="form-control" />
                                            <span asp-validation-for="NationalId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-2">
                                            <label asp-for="BankCode" class="control-label"></label>
                                        </div>
                                        <div class="col-md-6">
                                            <input asp-for="BankCode" class="form-control" />
                                            <span asp-validation-for="BankCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <button type="submit" class="btn btn-primary float-left">ذخیره تغییرات</button>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="alert p-0">
                                    <ul>
                                        <li>"مبلغ مورد نظر را برای اعتبار حساب خود وارد نمایید!."</li>
                                        <li>"رقم اعتبار باید حداقل از ۸۰۰۰۰ تومان شروع گردد."</li>
                                        <li>"رقم اعتبار نهایتا تا ۹۹۹۹۹۹۹ تومان می باشد ."</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
