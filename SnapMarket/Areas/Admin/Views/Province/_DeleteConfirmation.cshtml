@model SnapMarket.Entities.Province

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modal-title">حذف استان</h3>
                <button type="button" class="close btn-link" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body clearfix">
                @if (Model == null)
                {
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                }
                else
                {
                    <p>آیا شما می خواهید <span> @Model.Name  را از لیست استان ها حذف کنید ؟ </span> </p>
                    <form asp-action="Delete">
                        <input name="IsValid" type="hidden" value="True" />
                        <input type="hidden" asp-for="Id" />
                    </form>
                }
            </div>

            <div class="modal-footer">
                @if (Model != null)
                {
                    <button type="submit" class="btn btn-sm btn-labeled btn-success" data-save="modal">
                        بله
                    </button>
                }
                <button type="button" class="btn btn-sm btn-labeled  btn-danger  mr-1" data-dismiss="modal">
                    @(Model != null ? "خیر" : "بستن")
                </button>
            </div>
        </div>
    </div>
</div>
